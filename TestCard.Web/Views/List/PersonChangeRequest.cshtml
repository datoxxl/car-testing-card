@model IEnumerable<TestCard.Web.Models.PersonListModel>

<table class="x-table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IDNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CompanyName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AccountTypeName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Mobile)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IDNo)
            </td>
            <td>
                @Html.ActionLink(item.FullName, "View", "Person", new { @id = item.PersonID }, null)
            </td>
            <td>
                @Html.ActionLink(item.CompanyName, "Edit", "Company", new { @id = item.CompanyID }, null)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccountTypeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mobile)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td style="width: 1px;">
                @Html.ActionLink(GeneralResource.View, "View", "PersonChangeRequest", new { @id = item.PersonChangeRequestID }, new { @class = "x-button" })
                @using (Html.BeginForm("ProcessRequest", "PersonChangeRequest", new { @id = item.PersonChangeRequestID, status = (int)TestCard.Domain.ConfirmStatuses.Approved }, FormMethod.Post))
                {
                    <input type="submit" value="@GeneralResource.Approve" />
                }
                @using (Html.BeginForm("ProcessRequest", "PersonChangeRequest", new { @id = item.PersonChangeRequestID, status = (int)TestCard.Domain.ConfirmStatuses.Rejected }, FormMethod.Post))
                {
                    <input type="submit" value="@GeneralResource.Reject" />
                }
            </td>
        </tr>
    }

</table>
