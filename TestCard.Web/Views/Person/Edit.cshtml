@model TestCard.Web.Models.PersonModel
@{
    ViewBag.Title = "Edit";
}
<div class="x-form-container">
    <span class="header">@GeneralResource.User</span>
    <div class="top-actions">
        @Html.ActionLink(GeneralResource.BackToList, "List")
        @Html.ActionLink(GeneralResource.User, "Edit", "Person", ViewContext.RouteData.Values, new { @class = "active" })
        @Html.ActionLink(GeneralResource.WorkSchedule, "Edit", "PersonSchedule", ViewContext.RouteData.Values, null)
    </div>
    <div class="form-inner">
        @using (Html.BeginForm())
        {
            @Html.EditorForModel()
            <div class="x-actions">
                <input type="submit" value="@GeneralResource.Save" />
                @Html.ActionLink(GeneralResource.Cancel, "List")
            </div>
        }
    </div>
</div>
