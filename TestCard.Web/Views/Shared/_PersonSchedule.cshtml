@model TestCard.Web.Models.PersonScheduleModel

<table class="x-table x-schedule">
    <tr>
        <th rowspan="2">@GeneralResource.Day</th>
        <th colspan="2">@GeneralResource.WorkHours</th>
        <th colspan="2">@GeneralResource.BreakHours</th>
    </tr>
    <tr>
        <th>@GeneralResource.From</th>
        <th>@GeneralResource.To</th>
        <th>@GeneralResource.From</th>
        <th>@GeneralResource.To</th>
    </tr>
    @for (var i = 0; i < Model.Days.Count; i++)
    {
        <tr>
            <td>
                @System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.DayNames[(int)Model.Days[i].WeekDay]
                @Html.HiddenFor(x => x.Days[i].WeekDay)
            </td>
            <td>
                @Html.DropDownListFor(x => x.Days[i].WorkStartTime, new SelectList(Model.WorkHours, "Value", "Text", Model.Days[i].WorkStartTime))
            </td>
            <td>@Html.DropDownListFor(x => x.Days[i].WorkEndTime, new SelectList(Model.WorkHours, "Value", "Text", Model.Days[i].WorkEndTime))
            </td>
            <td>@Html.DropDownListFor(x => x.Days[i].BreakStartTime, new SelectList(Model.BreakHours, "Value", "Text", Model.Days[i].BreakStartTime))
            </td>
            <td>@Html.DropDownListFor(x => x.Days[i].BreakEndTime, new SelectList(Model.BreakHours, "Value", "Text", Model.Days[i].BreakEndTime))
            </td>
        </tr>
    }
</table>
